<div class="container mx-auto p-4">
  <h5 class="text-2xl font-bold mb-2" style="color: rgb(229, 229, 229);">
    Buscador de musica JearCastApp
  </h5>
  <p class="mb-4" style="color: rgb(229, 229, 229);">
    Ingresa un término para buscar contenido.
  </p>
  <h6
    class="text-lg font-semibold mb-3 d-none"
    id="search-title"
    style="color: rgb(190, 172, 164);"
  >
  </h6>
  <div
    id="player-container"
    class="text-white p-4 rounded shadow mt-4 container-player-jear"
  >
  </div>
  <br />
  <!-- Contenedor de búsqueda -->
  <div id="youtube-results" class="row gx-3 gy-4"></div>

  <!-- Modal para seleccionar o escribir nombre de la playlist -->
  <div
    class="modal fade"
    id="playlistModal"
    tabindex="-1"
    aria-labelledby="playlistModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content bg-dark text-white">
        <div class="modal-header">
          <h5 class="modal-title" id="playlistModalLabel">
            Agregar a Playlist
          </h5>
          <button
            type="button"
            class="btn-close btn-close-white"
            data-bs-dismiss="modal"
            aria-label="Cerrar"></button>
        </div>
          <div class="modal-body">
            <div id="playlistListContainer" class="mb-3">
              <label class="form-label">Playlists existentes:</label>
              <div id="playlistList" class="d-flex flex-wrap gap-2"></div>
            </div>
            <input
              type="text"
              id="playlistNameInput"
              class="form-control"
              placeholder="O escribe un nombre nuevo"
            />
          </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-success"
            id="confirmAddToPlaylist">Agregar</button
          >
        </div>
      </div>
    </div>
  </div>
</div>
<script is:inline type="module" src="/src/scripts/SearchYoutubeScript.js"
></script>
<script is:inline type="module" src="/src/scripts/FavoritesFirebaseScript.js"
></script>
<script is:inline type="module" src="/src/scripts/PlayListFirebaseScript.js"
></script>
