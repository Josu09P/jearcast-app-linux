---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
---
<DashboardLayout>
  <div class="container mx-auto p-4">
    <h3 class="text-2xl font-bold mb-2">Buscador de Videos en YouTube</h3>
    <p class="text-muted mb-4">Ingresa un término para buscar contenido.</p>
    <h6
      id="search-title"
      class="text-lg font-semibold text-primary mb-3 d-none"
    ></h6>

    <!-- Contenedor de búsqueda -->
    <div id="youtube-results" class="row gx-3 gy-4"></div>

    <!-- Contenedor de reproducción estilo Spotify -->
    <div id="player-container" class="d-none mt-4 p-4 bg-dark text-white rounded">
      <h5 id="current-title" class="mb-3"></h5>
      <div class="ratio ratio-16x9">
        <iframe
          id="youtube-player"
          src=""
          frameborder="0"
          allow="autoplay; encrypted-media"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</DashboardLayout>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script is:inline type="module" src="/src/scripts/SearchYoutubeScript.js"></script>
