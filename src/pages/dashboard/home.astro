---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import "/src/assets/css/global.css"
---
<DashboardLayout>
  <div class="container mx-auto p-4">
    <h5 class="text-2xl font-bold mb-2" style="color: rgb(229, 229, 229);">Buscador de musica JearCastApp</h5>
    <p class="mb-4"  style="color: rgb(229, 229, 229);">Ingresa un término para buscar contenido.</p>
    <h6
      id="search-title"
      class="text-lg font-semibold mb-3 d-none"
      style="color: rgb(190, 172, 164);"
    ></h6>
    <div id="player-container" class="text-white p-4 rounded shadow mt-4 container-player-jear"></div>
    <br>
    <!-- Contenedor de búsqueda -->
    <div id="youtube-results" class="row gx-3 gy-4"></div>
  </div>
</DashboardLayout>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script is:inline type="module" src="/src/scripts/SearchYoutubeScript.js"></script>
<script is:inline type="module" src="/src/scripts/FavoritosFirebaseScript.js"></script>

